      "type": "add",
      "item": {
        "type": "markdown",
        "id": "a64eb9d2-0812-44b8-9259-5984319430ae",
        "text": "# Traditional framework"
      },
      "after": "6dcbcbbc-1e10-40ca-8e39-3f1df21e829e",
      "id": "a64eb9d2-0812-44b8-9259-5984319430ae",
